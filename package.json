{
  "name": "swipe-layers",
  "version": "0.0.1",
  "description": "Module for swiping between layers",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cp-static": "cp example/index.html gh-pages/index.html && cp example/style.css gh-pages/style.css",
    "build-example": "browserify example/simple-swipe.js | uglifyjs -mc > gh-pages/simple-swipe.js",
    "watch-example": "(cd ./example; beefy simple-swipe.js --live)",
    "build": "npm run cp-static && npm run build-example",
    "watch": "npm run watch-example",
    "deploy": "git subtree push --prefix gh-pages origin gh-pages"

  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamicut/swipe-layers.git"
  },
  "author": "Marc Farra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kamicut/swipe-layers/issues"
  },
  "homepage": "https://github.com/kamicut/swipe-layers",
  "dependencies": {
    "mapbox.js": "^2.1.4"
  }
}
